{
  "name": "Add twitch clip to favorite",
  "version": "1.0",
  "description": "My Sample Extension",
  "manifest_version": 3,

  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://clips.twitch.tv/*"],
      "js": ["app.js"],
      "css": ["style.css"]

    }
  ],

  "action": {
		"default_icon": "icon.png",
		"default_title": "My Sample Extension",
		"default_popup": "popup.html",
		"css": ["style.css"]
  }

}
